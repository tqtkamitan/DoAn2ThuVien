
@{
    ViewBag.Title = "BookList";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="container mx-auto">
    <div class="card">
        <div class="card-header bg-primary text-light text-center" style="font-size:25px">
            Danh sách các cuốn sách trên trang
        </div>
        <div class="card-body">
            <div class="" style="margin-bottom:50px">
                <a class="float-right btn btn-primary" href="~/Admin/AddBook">Thêm Mới</a>
            </div>
            <table class="table text-center" style="table-layout:fixed;">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Tên sách</th>
                        <th scope="col">Tác giả</th>
                        <th scope="col">Thể loại</th>
                        <th scope="col">Ngày thêm</th>
                        <th scope="col">Tình trạng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.Book != null)
                    {
                        foreach (var item in ViewBag.Book)
                        {
                    <tr>
                        <td>@item.idBook</td>
                        <td>@item.bookName</td>
                        <td>@item.author</td>
                        <td>
                            @if (ViewBag.BookCaterogy != null)
                            {
                                foreach (var bookCaterogy in ViewBag.BookCaterogy)
                                {
                                    if (ViewBag.Caterogy != null)
                                    {
                                        foreach (var caterogy in ViewBag.Caterogy)
                                        {
                                            if (bookCaterogy.idBook == item.idBook)
                                            {
                                                if (bookCaterogy.idCaterogy == caterogy.idCaterogy)
                                                {
                                                    @bookCaterogy.caterogy @(", ")
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        </td>
                        <td>@item.dateAdded</td>
                        <td>@item.status</td>
                        <td><a href="~/Admin/EditBook/@item.idBook" class="btn btn-outline-primary" style="margin-right:10px">Sửa</a><a href="#" class="btn btn-outline-primary">Xoá</a></td>
                    </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



