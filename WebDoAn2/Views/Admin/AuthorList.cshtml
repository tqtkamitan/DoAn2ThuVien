
@{
    ViewBag.Title = "AuthorList";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="container mx-auto w-md-50">
    <div class="card">
        <div class="card-header bg-primary text-light text-center" style="font-size:25px">
            Danh sách tác giả
        </div>
        <div class="card-body">
            <div class="" style="margin-bottom:50px">
                <a class="float-right btn btn-primary" href="~/Admin/AddAuthor">Thêm Mới</a>
            </div>

            <table class="table text-center" style="table-layout:fixed;">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Tên tác giả</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.Author != null)
                    {
                        foreach (var item in ViewBag.author)
                        {
                            <tr>
                                <td>@item.idAuthor</td>
                                <td>@item.author</td>
                                <td><a href="~/Admin/EditAuthor/@item.idAuthor" class="btn btn-outline-primary" style="margin-right:10px">Sửa</a><a href="#" class="btn btn-outline-primary">Xoá</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
