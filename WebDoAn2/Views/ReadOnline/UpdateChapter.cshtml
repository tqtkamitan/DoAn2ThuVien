
@{
    ViewBag.Title = "UpdateChapter";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="container mx-auto">
    <div class="row" style="display:block">
        <div class="card text-center">
            <div class="card-header bg-primary text-light">
                Cập nhật thêm chương mới cho sách
            </div>
            <div class="card-body">
                <form action="">
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="col-md-12">Tên chương</label>
                        <input type="text" class="form-control col-md-12" id="" name="chapter" aria-describedby="emailHelp" placeholder="Enter your chapter here.">
                        <small id="emailHelp" class="form-text text-muted col-md-12">Số tập, số chương và tên chương</small>

                        <label for="exampleInputEmail1" class="col-md-12" style="margin-top:20px">Hình ảnh cho sách</label>
                        <input type="file" class="form-control col-md-12" id="" aria-describedby="emailHelp" name="file" multiple="multiple">
                        <small id="emailHelp" class="form-text text-muted col-md-12">chỉ các file: pdf, png, jpg, ...</small>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="~/Admin/BookList" class="btn btn-outline-primary" style="margin-left:10px">Cancel</a>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <a href="~/Admin/BookList">Trở về danh sách các cuốn sách trong thư viện</a>
            </div>
        </div>
    </div>
</div>

